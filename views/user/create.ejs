<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Generate API Key</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .card-header { background-color: #ee88c7; color: white; }
    .api-key-box {
      font-family: 'Courier New', Courier, monospace;
      background-color: #f4ccea;
      padding: 0.75rem;
      border-radius: 0.25rem;
      word-break: break-all;
    }
  </style>
</head>
<body>

  <div class="container mt-5">

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 text-end mb-2">
        <a href="/admin/login" class="btn btn-sm btn-dark">
          Login Sebagai Admin
        </a>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">
          <div class="card-header text-center">
            <h3>Buat API Key Anda</h3>
          </div>
          <div class="card-body p-4">

            <% if (message) { %>
              <div class="alert alert-<%= message.type === 'success' ? 'success' : 'danger' %>" role="alert">
                <%= message.text %>
              </div>
            <% } %>

            <form action="/save-key" method="POST" id="apiKeyForm">

              <div class="row mb-3">
                <div class="col-md-6">
                  <label for="first_name" class="form-label">First Name</label>
                  <input type="text" class="form-control" id="first_name" name="first_name" required>
                </div>
                <div class="col-md-6">
                  <label for="last_name" class="form-label">Last Name</label>
                  <input type="text" class="form-control" id="last_name" name="last_name" required>
                </div>
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>

              <hr class="my-4">

              <div class="mb-3">
                <label class="form-label">API Key Anda:</label>
                <input type="hidden" id="apiKeyInput" name="api_key">
                
                <div class="api-key-box" id="apiKeyDisplay">
                  Klik "Generate" untuk membuat key...
                </div>
              </div>

              <div class="d-grid gap-2 d-md-flex justify-content-between">
                <button type="button" class="btn btn-secondary" id="generateBtn">
                  Generate Key
                </button>
                <button type="submit" class="btn btn-primary">
                  Save API Key
                </button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('generateBtn').addEventListener('click', function() {
      // Ambil tombol untuk disabled
      const btn = this;
      btn.disabled = true;
      btn.textContent = 'Generating...';

      // Panggil endpoint /generate-key
      fetch('/generate-key')
        .then(response => response.json())
        .then(data => {
          // Masukkan key ke input (untuk dikirim)
          document.getElementById('apiKeyInput').value = data.apiKey;
          // Tampilkan key ke box display
          document.getElementById('apiKeyDisplay').textContent = data.apiKey;
          
          btn.disabled = false;
          btn.textContent = 'Generate Key';
        })
        .catch(err => {
          console.error(err);
          document.getElementById('apiKeyDisplay').textContent = 'Error. Coba lagi.';
          btn.disabled = false;
          btn.textContent = 'Generate Key';
        });
    });
  </script>

</body>
</html>